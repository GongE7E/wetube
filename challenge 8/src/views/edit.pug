extends base

block content
  form(method="post")
    input(type="text" name="title" value=movie.title)
    input(type="text", name="summary" value=movie.summary)
    input(type="date", name="year" placeholder="year" value=movie.year)
    input(type="text", name="genres" placeholder="genres" value=movie.genres)
    input(type="submit", value="Edit")